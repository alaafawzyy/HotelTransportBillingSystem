<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:layout_gravity="center"

    >
    <!-- Card for Hotel Booking -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:foregroundGravity="center"
        android:backgroundTint="@android:color/transparent"
      >

        <ImageView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/makahh"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/hotel_card"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/black"
            android:alpha="0.8"
            app:cardCornerRadius="20dp"
            android:outlineSpotShadowColor="@color/gray"
            android:outlineAmbientShadowColor="@color/gray"
            android:elevation="50dp"
            app:cardMaxElevation="50dp"
         android:layout_marginTop="180dp"
            app:cardElevation="50dp"
            android:gravity="center"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_hotel_24"
                android:contentDescription="Hotel Booking"
                android:layout_gravity="top|center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="حجز فندق"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FFD700"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:layout_marginBottom="5dp" />
        </androidx.cardview.widget.CardView>

        <!-- Card for Operation -->
        <androidx.cardview.widget.CardView
            android:id="@+id/operation_card"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="20dp"
            android:alpha="0.8"
            android:outlineSpotShadowColor="@color/gray"
            android:outlineAmbientShadowColor="@color/gray"
            android:elevation="50dp"
            app:cardMaxElevation="50dp"
            app:cardElevation="50dp"
            android:layout_marginTop="25dp"
           app:layout_constraintTop_toBottomOf="@+id/hotel_card"
            android:gravity="center"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_cached_24"
                android:contentDescription="Hotel Booking"
                android:layout_gravity="top|center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="أمر تشغيل"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FFD700"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:layout_marginBottom="5dp" />
        </androidx.cardview.widget.CardView>



        <!-- Card for Transport -->
        <androidx.cardview.widget.CardView
            android:id="@+id/transport_card"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/black"
            app:cardCornerRadius="20dp"
            android:alpha="0.8"
            android:outlineSpotShadowColor="@color/gray"
            android:outlineAmbientShadowColor="@color/gray"
            android:elevation="50dp"
            app:cardMaxElevation="50dp"
            app:cardElevation="50dp"
            android:gravity="center"
            android:foregroundGravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/operation_card"
            android:layout_marginTop="25dp">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_receipt_long_24"
                android:contentDescription="Hotel Booking"
                android:layout_gravity="top|center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فاتورة نقل"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FFD700"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:layout_marginBottom="5dp" />
        </androidx.cardview.widget.CardView>

        <!-- Card for Price -->
        <androidx.cardview.widget.CardView
            android:id="@+id/price_card"
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:backgroundTint="@color/black"
            android:alpha="0.8"
            app:cardCornerRadius="20dp"
            android:outlineSpotShadowColor="@color/gray"
            android:outlineAmbientShadowColor="@color/gray"
            android:elevation="50dp"
            app:cardMaxElevation="50dp"
            app:cardElevation="50dp"
            android:gravity="center"
            android:foregroundGravity="center"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/transport_card"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baseline_price_change_24"
                android:contentDescription="Hotel Booking"
                android:layout_gravity="top|center" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الأسعار"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_bold"
                android:textColor="#FFD700"
                android:layout_gravity="bottom|center"
                android:gravity="center"
                android:layout_marginBottom="5dp" />
        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
